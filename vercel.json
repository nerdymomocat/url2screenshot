{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/screenshot",
      "destination": "/api/screenshot.js"
    },
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/public/404.html"
    }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 60
    }
  }
}
